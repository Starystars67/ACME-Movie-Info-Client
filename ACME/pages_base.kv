#:kivy 1.0


<ScreenManagement>:
    MainScreen:
    Screen1:



FloatLayout:
	
	#This makes the id for output_box global
	output_box: output_box.__self__

	Button:
		id: rand_button
		size_hint: .16, .075
		pos_hint: {'x': .02, 'y': .9}
		text: 'Find random \n movie'
		on_press: app.findRandomMovie(self)
		
	TextInput:
		id: search_box
		size_hint_x: 0.5
		size_hint_y: 0.075
		pos_hint: {'x': .2, 'y': .9}
		height: 100
		font_size: 22

		
	Button:
		id: search_button
		size_hint: .1, .075
		pos_hint: {'x': .705, 'y': .9}
		text: 'SEARCH'
		
		
	Button:
		id: my_list_button
		size_hint: .16, .075
		pos_hint: {'x': .82, 'y': .9}
		text: 'MY LIST'
		
		
	Label:
		id: output_box
		size_hint: None, None
		pos_hint: {'x': 1, 'y': .5}
		text: 'Output here'
		color: (0, 1, 0, 1)
		
			
			